generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]
}

model Order {
  id            Int       @id @default(autoincrement())
  userId        Int
  lunchTypeId   Int
  date          DateTime
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  customization String?   @db.VarChar(300)
  coldType      String?   @db.VarChar(200)
  breadType     String?   @db.VarChar(100)
  drinkType     String?   @db.VarChar(100)
  user          User      @relation(fields: [userId], references: [id])
  lunchType     LunchType @relation(fields: [lunchTypeId], references: [id])
}

model LunchType {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  price  Float
  orders Order[]
}

model Parameter {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String
}
